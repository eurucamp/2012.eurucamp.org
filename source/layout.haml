!!! 5
- ie_html :lang => 'en', :class => 'no-js' do
  %head
    %meta(charset="utf-8")
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    %title= [current_page.data.title, 'eurucamp'].compact.flatten.join(' | ')
    %meta(content="" name="description")
    %meta(content="" name="author")
    %meta(content="width=device-width, initial-scale=1.0" name="viewport")
    = feed_tag :atom, "/feed.xml", :title => "ATOM"

    %link(href="favicon.ico" rel="shortcut icon")

    = stylesheet_link_tag 'screen'

    %script(src="/javascripts/lib/modernizr.js")
    %script(src="http://use.typekit.com/uxm6bkh.js")

    :javascript
      try { Typekit.load(); } catch(e) {};

  %body(class="#{current_page.data.body_class}")
    #container
      = partial 'partials/header'
      #main(role="main")
        = yield
      = partial 'partials/footer'
